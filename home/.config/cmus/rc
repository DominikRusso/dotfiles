set start_view=sorted

set lib_sort=albumartist date album artist discnumber tracknumber title filename

set aaa_mode=all
set play_library=true
set play_sorted=true

set continue=true
set follow=true
set repeat=true
set repeat_current=false
set shuffle=false

set show_remaining_time=false

# albumartist [:: artist] - album - number. title                  year
set format_current= %A%{?albumartist!=artist? :: %a} - %l - %n. %t%=%-5y
set format_playlist= %-20%a %3n. %t%= %y %d %{?X!=0?%3X ?    }
set format_playlist_va= %-20%A %3n. %t [%a]%= %y %d %{?X!=0?%3X ?    }
set format_trackwin_va=%3n. %t [%a]%= %y %d

set color_separator=40
set color_titleline_bg=40
set color_titleline_fg=black
set color_win_cur=40
set color_win_cur_sel_bg=245
set color_win_cur_sel_fg=40
set color_win_inactive_cur_sel_bg=236
set color_win_inactive_cur_sel_fg=40
set color_win_inactive_sel_bg=236
set color_win_inactive_sel_fg=255
set color_win_sel_bg=245
set color_win_sel_fg=black
set color_win_title_bg=default
set color_win_title_fg=40
set color_win_title_fg=40
set color_win_title_fg=default

