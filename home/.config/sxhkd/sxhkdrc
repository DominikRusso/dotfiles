# NOTES
# - Make sure `$TERMINAL -e` is the right command.
#   It is for `alacritty` and `st` at least.

###
### general
###

# launch dmenu
alt + d
	dmenu_run

# open terminal
alt + Return
	$TERMINAL
alt + o ; t
	$TERMINAL

# open browser
alt + o ; b
	$BROWSER

# open {terminal progams}
alt + o ; {a,v}
	$TERMINAL -e {\
		alsamixer,\
		$EDITOR,\ # vim
	}

# system {commands}
super + s ; {h, r, s}
	dmenu_prompt {\
		"Hibernate?" "systemctl hibernate",\
		"Reboot?" "sudo -A reboot",\
		"Shutdown?" "sudo -A shutdown -h now"\
	}
super + s ; z
	systemctl suspend

# lock
super + x
	physlock -m -s

# screenshot
alt + {_,shift + } p
	scrot -z { ,-s} ~/media/images/screenshots/screenshot-%Y-%m-%d_%H-%M-%S.png

# brightness up/down
XF86MonBrightness{Up,Down}
	light {-A,-U} 10

# toggle mute
XF86AudioMute
	vol toggle

# volume up/down
XF86Audio{Raise,Lower}Volume
	vol {up,down} 5

XF86Calculator
	$TERMINAL -e bc -ql


###
### sxhkd
###

# reload config
alt + Escape
	pkill -USR1 -x sxhkd


###
### bspwm
###

# exit/restart bspwm
alt + ctrl + {e, r}
	bspc {quit, wm -r}

# hide/show polybar
alt + b
	polybar-msg cmd {\
		hide && bspc config bottom_padding 0,\
		show\
	}

# close node
alt + {_,shift} + q
	bspc node -{c,k}

# set the node state
alt + s ; {t, f, m}
	bspc node -t {tiled, floating, fullscreen}

# set the node flags
alt + f ; {m, l, s, p}
	bspc node -g {marked, locked, sticky, private}

# focus the node in the given direction
alt + {h,j,k,l}
	bspc node -f {west,south,north,east}

# swap a tiled node in the given direction
# move a floating node in the given direction
alt + shift + {h,j,k,l}
	{ dir=west  dx=-20 dy=0   \
	, dir=south dx=0   dy=20  \
	, dir=north dx=0   dy=-20 \
	, dir=east  dx=20  dy=0   \
	}; \
	bspc node --move "$dx" "$dy" || bspc node --swap "$dir"

# focus the next/previous node on the current desktop
alt + {_,shift + } n
	bspc node -f {next,prev}.local

# focus the last desktop
alt + Tab
	bspc desktop -f last

# focus/swap the current node and the biggest node on the current desktop
alt + {_,shift +} m
	bspc node -{f,s} biggest.local

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

# cancel all preselections for the focused desktop
alt + control + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its sides outward
alt + super + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its sides inward
alt + super + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
