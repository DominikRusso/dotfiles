#
# general bindings
#

# launch dmenu
alt + d
	dmenu_run

# open terminal
alt + Return
	alacritty
alt + o ; t
	alacritty

# open browser
alt + o ; b
	qutebrowser

# open {terminal progams}
alt + o ; {a,c,h,m,n,v}
	alacritty -e {alsamixer,calcurse,htop,cmus,newsboat,nvim}

# system {commands}
super + s ; {h, r, s}
	dmenu_prompt {"Hibernate?" "systemctl hibernate","Reboot?" "sudo -A reboot","Shutdown?" "sudo -A shutdown -h now"}
super + s ; z
	systemctl suspend

# lock
super + x
	physlock -m -s

# screenshot
alt + p
	scrot -z ~/media/images/screenshots/screenshot-%Y-%m-%d_%H-%M-%S.png

# toggle mute
XF86AudioMute
	amixer sset Master toggle

# volume down
XF86AudioLowerVolume
	amixer sset Master 5%-

# volume up
XF86AudioRaiseVolume
	amixer sset Master 5%+


#
# sxhkd
#

# reload config
alt + Escape
	pkill -USR1 -x sxhkd


#
# bspwm
#

# exit/restart bspwm
alt + ctrl + {e,r}
	bspc {quit,wm -r}

# close node
alt + ctrl + c
	bspc node -c
alt + shift + q
	bspc node -c

# toggle gaps
alt + g
	bspc config window_gap {0, 8}

# set the node state
alt + s ; {t,f,m}
	bspc node -t {tiled,floating,fullscreen}

# set the node flags
alt + f ; {m,l,s,p}
	bspc node -g {marked,locked,sticky,private}

# focus/swap the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node on the current desktop
alt + {_,shift + } n
	bspc node -f {next,prev}.local

# focus the next/previous desktop on the current monitor
alt + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last desktop
alt + Tab
	bspc desktop -f last

# focus/swap the current node and the biggest node on the current desktop
alt + {_,shift +} m
	bspc node -{f,s} biggest.local

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

# cancel all preselections for the focused desktop
alt + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its sides outward
alt + super + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its sides inward
alt + super + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

