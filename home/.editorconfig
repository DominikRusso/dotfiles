# top level editor config
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

; C
[{*.c,*.h}]
indent_size = 4
indent_style = tab

; C++
[{*.cpp,*.cc}]
indent_size = 4
indent_style = space

; Clojure
[{*.clj,*.cljc,*.cljs,*.edn}]
indent_size = 2
indent_style = space

; CSS
[*.css]
indent_size = 2
indent_style = space

; Elixir
[{*.ex,*.exs}]
indent_size = 2
indent_style = space

; Erlang
[{*.erl,*.hrl}]
indent_size = 4
indent_style = space

; F*
[*.fst]
indent_size = 4
indent_style = space

; Golang
[*.go]
indent_size = 8
indent_style = tab

; Haskell
[{*.hs,*.lhs}]
indent_size = 2
indent_style = space

; HTML
[*.html]
indent_size = 2
indent_style = space

; Java
[*.java]
indent_size = 4
indent_style = space

; JavaScript
[*.js]
indent_size = 2
indent_style = space

; JSON
[*.json]
indent_size = 2
indent_style = space
insert_final_newline = ignore

; Julia
[*.jl]
indent_size = 4
indent_style = space

; Kotlin
[{*.kt,*.ktm,*.kts}]
indent_size = 4
indent_style = space

; LaTeX, TeX
[*.tex]
indent_size = 2
indent_style = space

; Lisp
[*.lisp]
indent_size = 2
indent_style = space

; Makefile
[Makefile]
indent_size = 4
indent_style = tab

; Markdown
[*.md]
trim_trailing_whitespace = false

; OCaml
[{*.ml,*.mli}]
indent_size = 2
indent_style = space

; Pascal
[{*.pas,*.pp}]
indent_size = 2
indent_style = space

; Perl, Prolog
[*.pl]
indent_size = 4
indent_style = space

; PHP
[*.php]
indent_size = 4
indent_style = space

; Python
[*.py]
indent_size = 4
indent_style = space

; R
[*.r]
indent_size = 2
indent_style = space

; Ruby
[*.rb]
indent_size = 2
indent_style = space

; Rust
[{*.rs,*.rlib}]
indent_size = 4
indent_style = space

; Scala
[{*.scala,*.sc}]
indent_size = 2
indent_style = space

; Shell
[*.sh]
indent_size = 2
indent_style = space

; SQL
[*.sql]
indent_size = 2
indent_style = space

; TypeScript
[*.ts]
indent_size = 4
indent_style = space

; XML
[{*.xml,*.xsd,*.xsl,*.xslt}]
indent_size = 2
indent_style = space

; YAML
[{*.yaml,*.yml}]
indent_size = 2
indent_style = space

