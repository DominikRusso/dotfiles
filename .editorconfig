# top level editor config
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.html]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[Makefile]
indent_style = tab

[*.bat]
indent_style = tab

[docs/**.txt]
max_line_length = 79

[*.py]
max_line_length = 119

[*.yaml, *.yml]
indent_size = 2 
