# top level editor config
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.c,*.h}]
indent_style = tab
indent_size = 4

[*.css]
indent_size = 2
indent_style = space

[*.go]
indent_size = 8
indent_style = tab

[*.html]
indent_size = 2
indent_style = space

[*.hs]
indent_size = 2
indent_style = space

[*.java]
indent_size = 4
indent_style = space

[*.json]
indent_size = 2
indent_style = space
insert_final_newline = ignore

[Makefile]
indent_style = tab

[*.py]
indent_style = space

[*.rb]
indent_size = 2
indent_style = space

[{*.rs,*.rlib}]
indent_size = 2
indent_style = space

[*.tex]
indent_size = 2
indent_style = space

[{*.xml,*.xsd,*.xsl,*.xslt}]
indent_size = 2
indent_style = space

[{*.yaml,*.yml}]
indent_size = 2
indent_style = space

