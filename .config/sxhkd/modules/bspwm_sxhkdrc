#
# bspwm
#

# quit/restart bspwm
super + alt + {q,r}
    bspc {quit,wm -r}

# close/kill window
super + {_,shift} + q
    bspc node -{c,k}


#
# state/flags
#

# set the window state
super + alt + {t,p,d,f} # tiled,pseudo,detached,full
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,s,p}
    bspc node -g {marked,locked,sticky,private}


#
# movement
#

# move focus
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# TODO: combine move win and move float win with querying window state
#       maybe something like 'bspc query -T -n  | grep -Fq '"state":"floating"'

# move window
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# move floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# swap current node with biggest node
super + g
    bspc node -s biggest

# swap newest marked node to the newest preselected node
super + alt + s
    bspc node newest.marked.local -n newest.!automatic.local

# expand a window by moving one of its sides outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its sides inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move focus to given desktop
super + {1-9,0}
    bspc desktop -f '^{1-9,10}'

# move window to given desktop
super + shift + {1-9,0}
    bspc node -d '^{1-9,10}'


#
# preselection
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

