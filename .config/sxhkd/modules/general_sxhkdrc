#
# general bindings
#

super + Return
    $TERMINAL

super + d
    dmenu_run

super + o ; b
    $BROWSER

super + o ; {a,c,f,h,m,n,v}
    $TERMINAL -e {alsamixer,calcurse, $FILE, htop, cmus, newsboat, $EDITOR}

super + shift + x
    dmenu_prompt "Shutdown?" "sudo shutdown -h now" # shutdown must be passwordless in sudoers


#
# sxhkd
#

# reload config
super + Escape
    pkill -USR1 -x sxhkd


