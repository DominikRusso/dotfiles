#!/bin/sh
alias cd..="cd .."
alias chmod="chmod -v"
alias chown="chown -v"
alias cp="cp -iv"
alias diff="diff --color=auto"
alias exa="exa --all --classify --git --group-directories-first --header --long"
alias ffmpeg="ffmpeg -hide_banner"
alias gdb="gdb -q -nh -x $XDG_CONFIG_HOME/gdb/init"
alias grep="grep --color=auto"
alias ll="ls -Alh"
alias ls="ls --color=auto -F --group-directories-first"
alias mkdir="mkdir -pv"
alias mv="mv -iv"
alias nb="newsboat"
alias rm="rm -v"
alias sdn="sudo shutdown -h now"
alias spt="speedtest-cli | grep -E --color=never 'Testing from|Hosted by|Download:|Upload:'"
alias sudo="sudo "
alias tmux="tmux -f $XDG_CONFIG_HOME/tmux/tmux.conf"
alias vi="vim"
alias wttr="curl v2.wttr.in"
alias x="startx $XINITRC"
alias yt="youtube-dl --add-metadata -i"
alias yta="yt -x --audio-format mp3"
command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d"
